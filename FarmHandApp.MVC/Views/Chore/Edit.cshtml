                @Html.ValidationMessageFor(model => model.IsDaily, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update Chore" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Chores", "Index", null, new { @class = "btn btn-primary" })
</div>

